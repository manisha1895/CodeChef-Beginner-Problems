#include<iostream>
using namespace std;
int main(){
  int T,i,salary;
  float HRA,DA,gross_salary;
  cin>>T;
  for(i=0;i<T;i++){
    cin>>salary;
    if(salary<1500){
    	HRA = 0.1*salary;
    	DA = 0.9*salary;
    }
    else{
    	HRA = 500;
    	DA = 0.98*salary;
    }
    gross_salary = salary + HRA +DA;
    cout<<gross_salary<<endl;
    
  }  
  return 0;
  
}  
